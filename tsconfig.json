{
  "compilerOptions": {
    "lib": ["ES2018", "ES2018.AsyncIterable"],
    "target": "ES2018",
    "noImplicitAny": true,
    "declaration": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "dist", "example"]
}
